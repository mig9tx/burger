<div class="container">
    
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">BURGER TIME</h1>
            <img class="m-auto" src="/assets/img/video_game_burger.gif">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                    <button class="col" type="submit">Add Burger</button>
                </div>

            </form>
        </div>
    </div>

    <div="row">
        <h2>Devour this burger!</h2>
        <div class="col-md-6" <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{!-- {{burgers/burger-block devoured=true}} --}}
            <div class='burger'>{{burger_name}}
                <button id='devour' data-id='{{id}}' class="button" value='{{devoured}}'>Devour Burger!</button>
            </div>
            {{/unless}}
            {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Burgers Devoured</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{!-- {{burgers/burger-block devoured=false}} --}}
                <div class="burger">{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
            </ul>
        </div>
</div>
</div>